# ==================== 数据库配置 ====================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=rag_knowledge_base

# ==================== DeepSeek API 配置 ====================
DEEPSEEK_API_BASE=https://api.deepseek.com/v1
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_MODEL=deepseek-chat

# ==================== 向量库配置 ====================
VECTOR_DB_TYPE=faiss  # 可选: faiss, milvus, chroma
FAISS_INDEX_PATH=./data/vector_store/faiss_index
EMBEDDING_MODEL=shibing624/text2vec-base-chinese
EMBEDDING_CACHE_DIR=./models/embeddings  # 模型缓存目录

# ==================== 文档处理配置 ====================
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_FILE_SIZE=10485760  # 10MB

# ==================== RAG 配置 ====================
TOP_K=5
TEMPERATURE=0.7
MAX_TOKENS=2000

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_DIR=./logs

# ==================== 服务配置 ====================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
